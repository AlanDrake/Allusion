{
  "name": "allusion",
  "productName": "Allusion",
  "version": "0.0.4",
  "description": "A tool for managing your visual library",
  "main": "build/main.bundle.js",
  "scripts": {
    "dev": "rimraf build && webpack --watch --config ./webpack.dev.js --progress --color",
    "production": "rimraf build && webpack --config ./webpack.prod.js",
    "start": "electron ./build/main.bundle.js --dev",
    "lint": "eslint src/**/*{ts,tsx} -f codeframe",
    "test": "jest",
    "package": "yarn build && electron-builder",
    "logo": "ncp ./resources/logo/allusion-logomark-fc.icns ./build/icon.icns && ncp ./resources/logo/allusion-logomark-fc-256.ico ./build/icon.ico",
    "build": "rimraf dist && yarn production && yarn logo",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.allusion-app.allusion",
    "productName": "Allusion",
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "dmg": {
      "icon": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Graphics"
    },
    "files": [
      "!node_modules",
      "build/**/*",
      "package.json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allusion-app/Allusion.git"
  },
  "author": "Allusion-App",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/allusion-app/Allusion/issues"
  },
  "homepage": "https://github.com/allusion-app/Allusion#readme",
  "devDependencies": {
    "@svgr/webpack": "^5.4.0",
    "@types/chrome": "^0.0.86",
    "@types/fs-extra": "^9.0.0",
    "@types/jest": "^26.0.0",
    "@types/offscreencanvas": "^2019.6.2",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "@types/react-window": "^1.8.2",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "css-loader": "^4.3.0",
    "electron": "^9.3.0",
    "electron-builder": "^22.8.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-react": "^7.21.0",
    "eslint-plugin-react-hooks": "^4.1.0",
    "file-loader": "^6.1.0",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.0.0",
    "mini-css-extract-plugin": "^1.0.0",
    "ncp": "^2.0.0",
    "node-loader": "^1.0.0",
    "normalize.css": "^8.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.0.0",
    "ts-loader": "^8.0.0",
    "typescript": "^3.8.2",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0",
    "worker-loader": "^3.0.0"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.25.0",
    "@popperjs/core": "^2.4.4",
    "chokidar": "^3.4.0",
    "dexie": "^3.0.2",
    "electron-updater": "^4.3.5",
    "fs-extra": "^9.0.1",
    "image-size": "^0.8.3",
    "mobx": "^6.0.0",
    "mobx-react-lite": "^3.0.0",
    "react": "^16.13.1",
    "react-colorful": "^4.1.4",
    "react-dom": "^16.13.1",
    "react-popper": "^2.2.3",
    "react-responsive-pinch-zoom-pan": "^0.3.0",
    "react-window": "^1.8.5",
    "sourcemapped-stacktrace": "^1.1.11",
    "uuid": "^8.3.0"
  }
}
